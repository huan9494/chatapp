>>>>>>> 6285d24... add avatar
                    </div>
                    <div class="panel-body">
                        <ul class="media-list">                            
                          <% current_user.chatrooms.each do |chatroom| %>
                              <li class="media">

                                  <div class="media-body">

                                      <div class="media">
                                          <div class="media-body" >
                                              <h5><%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %></h5>
                                          </div>
                                      </div>

                                  </div>
                              </li>
                          <% end %>
                        </ul>
                    </div>
                </div>
              <% end %>
            </div>

            <div class="col-md-8">
                <div class="panel panel-info">
                    <div class="panel-body">
                      <%= yield %>
                    </div>
                </div>
            </div>


        </div>
    	</div>
    <%= render 'shared/footer' %>
  </body>
</html>
