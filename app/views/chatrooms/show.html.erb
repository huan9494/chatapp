<div class="panel-heading panel-info panel">
    <b>RECENT CHAT HISTORY</b>
</div>
<div style="margin: 20px 0">
	<p><strong>Name:</strong>
	  <%= @chatroom.name %></p>


<ul class="media-list">

	<div class="scrollable" style=" max-height: 350px; overflow: auto;" id="message_dialog">
		<div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' style="padding: 10px;" >
			<% @chatroom.messages.limit(100).each do |message| %>
					<%= render message %>
			<% end %>
		</div>
	</div>

</ul>


    <div class="panel-footer">
        <div class="input-group col-md-12 col-sm-12 col-xs-12">
        <%= form_for [@chatroom, Message.new], remote: true do |f| %>
			<%= f.text_area :body, rows: 2, class: "form-control", autofocus: true, placeholder: "Your messages here..." %>
		<% end %>
        </div>
    </div>
</div>